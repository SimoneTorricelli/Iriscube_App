<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:backgroundTint="@color/light_brown"
        android:id="@+id/movement_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:foregroundGravity="center"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:background="@drawable/primary_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="@font/poppins_bold"
        android:id="@+id/movement_title"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="0dp"
        android:text="null"
        android:textSize="15sp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toEndOf="@+id/movement_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:fontFamily="@font/poppins_regular"
        android:id="@+id/movement_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="40dp"
        android:text="null"
        android:textAlignment="textStart"
        android:textColor="@color/light_brown"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@+id/movement_image"
        app:layout_constraintTop_toBottomOf="@+id/movement_title" />

    <TextView
        android:id="@+id/movement_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/poppins_bold"
        android:text="null"
        android:textColor="@color/orange_2"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toEndOf="@+id/movement_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>